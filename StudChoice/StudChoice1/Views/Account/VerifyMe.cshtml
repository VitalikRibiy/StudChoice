@model StudChoice1.Models.RegisterModel
@{
    ViewData["Title"] = "VerifyMe";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">

        <section>
            <form id="account" action="VerifyMe" method="post">
                <h4>This data will be sent to our administrators who verify that you real person and confirm you to create an account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TransictionNumber"></label>
                    <input asp-for="TransictionNumber" class="form-control" />
                    <span asp-validation-for="TransictionNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Verify me</button>
                </div>
            </form>
        </section>
    </div>
</div>


