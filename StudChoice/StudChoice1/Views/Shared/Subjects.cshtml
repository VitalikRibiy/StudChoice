@model List<StudChoice.BLL.DTOs.SubjectDTO>

@{
    ViewData["Title"] = "Subjects";
}

<div class="bg-primary text-white text-center"><h4>Список предметів</h4></div>

<table class="table table-sm table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Назва</th>
            <th scope="col">Опис</th>
            <th scope="col">Кількість студентів</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">There are no subjects</td></tr>
        }
        else
        {
            foreach (var subject in Model)
            {
                <tr>
                    <td class="col col-2"><a asp-controller="Subject" asp-action="View" asp-all-route-data="@(new Dictionary<string, string> { {"subjectId", subject.Id.ToString() } })">@subject.Name</a></td>
                    <td class="col col-8">@subject.Description</td>
                    <td class="col col-1">@subject.AssignedStudentsCount / @subject.MaxStudents</td>
                </tr>
            }
        }
    </tbody>
</table>